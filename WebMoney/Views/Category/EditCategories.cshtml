@model WebMoney.Utilities.Models.Design

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<style>
	.example-1 .form-group {
		padding: 1em;
		margin: 1em;
	}

	.example-1 input[type=file] {
		outline: 0;
		opacity: 0;
		pointer-events: none;
		user-select: none;
	}

	.example-1 .label {
		width: 120px;
		border: 2px dashed grey;
		border-radius: 5px;
		display: block;
		padding: 1.2em;
		transition: border 300ms ease;
		cursor: pointer;
		text-align: center;
	}

		.example-1 .label i {
			display: block;
			font-size: 42px;
			padding-bottom: 16px;
		}

		.example-1 .label i, .example-1 .label .title {
			color: grey;
			transition: 200ms color;
		}

.example-1 .label:hover { border: 2px solid #000; }
.example-1 .label:hover i, .example-1 .label:hover .title { color: #000; }

	input, select {
		max-width: 100%;
	}
</style>

<form class="form-horizontal" action="~/Category/AddCategories" method="post" style="padding: 1rem">
	<div class="row">
		<div class="col-2">
			<label class="form-label" for="Name">Название</label>
			<input type="text" class="form-control col-10" name="Name" value="@Model.Name" />
		</div>
	</div>
	<div class="row">
		<div class="example-1">
			<div class="form-group">
				<label class="label">
					<i class="material-icons">attach_file</i>
					<span class="title">Добавить файл</span>
					<input type="file" name="Picture" accept="image/*" value="@Model.Picture">
				</label>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-2">
			<label class="form-label" for="Color">Цвет</label>
			<input type="color" class="form-control form-control-color col-10" name="Color" value="@Model.Color" />
		</div>
	</div>
	<div class="modal-footer">
		<button class="btn btn-light" type="button" data-bs-dismiss="modal">Закрыть</button>
		<button class="btn btn-primary" type="button">Сохранить</button>
	</div>
</form>